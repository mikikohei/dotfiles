[user]
  name = mikik
  email = mikik@nttdata.co.jp
[alias]
  st = status
  sts = status --short --branch
  co = checkout
  fe = fetch
  br = branch
  ci = commit
  cia = commit --amend
  ad = add
  rb = rebase
  pl = pull
  plr = pull --rebase
  cp = cherry-pick
  lg = log --graph --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lga = log --graph --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
  lgns = log --graph --color --decorate --oneline --name-status
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore_global
  quotepath = false
  editor = vim
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[fetch]
  prune = true
